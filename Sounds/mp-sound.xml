<PropertyList>

<fx>

    <engine>
        <name>left engine</name>
        <path>Aircraft/KC-137R/Sounds/mpjet.wav</path>
        <mode>looped</mode>
        <condition>
            <property>engines/engine[0]/n1</property>
        </condition>
        <volume>
            <property>engines/engine[0]/n1</property>
            <offset>-0.75</offset>
            <factor>0.0125</factor>
            <min>0.0</min>
            <max>5.0</max>
        </volume>
        <position>
            <x>0</x>
            <y>9.8</y>
            <z>-3</z>
        </position>
        <reference-dist>400.0</reference-dist>
        <max-dist>5000.0</max-dist>
    </engine>

    <engine>
        <name>right engine</name>
        <path>Aircraft/KC-137R/Sounds/mpjet.wav</path>
        <mode>looped</mode>
        <condition>
            <property>engines/engine[2]/n1</property>
        </condition>
        <volume>
            <property>engines/engine[2]/n1</property>
            <offset>-0.75</offset>
            <factor>0.0125</factor>
            <min>0.0</min>
            <max>5.0</max>
        </volume>
        <position>
            <x>0</x>
            <y>-9.8</y>
            <z>-3</z>
        </position>
        <reference-dist>400.0</reference-dist>
        <max-dist>5000.0</max-dist>
    </engine>

    <engine>
        <name>left n1</name>
        <path>Aircraft/KC-137R/Sounds/mpjet.wav</path>
        <mode>looped</mode>
        <property>engines/engine[0]/n1</property>
        <pitch>
            <property>engines/engine[0]/n1</property>
            <offset>0.8</offset>
            <factor>0.1</factor>
            <min>0.0</min>
            <max>100.0</max>
        </pitch>
        <volume>
            <property>engines/engine[0]/n1</property>
            <factor>10</factor>
            <min>0.0</min>
            <max>0.5</max>
        </volume>
        <position>
            <x>0</x>
            <y>9.8</y>
            <z>-3</z>
        </position>
        <reference-dist>400.0</reference-dist>
        <max-dist>5000.0</max-dist>
    </engine>

    <engine>
        <name>right n1</name>
        <path>Aircraft/KC-137R/Sounds/mpjet.wav</path>
        <mode>looped</mode>
        <property>engines/engine[2]/n1</property>
        <volume>
            <property>engines/engine[2]/n1</property>
            <factor>10</factor>
            <min>0.0</min>
            <max>0.5</max>
        </volume>
        <pitch>
            <property>engines/engine[2]/n1</property>
            <offset>0.8</offset>
            <factor>0.1</factor>
            <min>0.0</min>
            <max>100.0</max>
        </pitch>
        <position>
            <x>0</x>
            <y>-9.8</y>
            <z>-3</z>
        </position>
        <reference-dist>400.0</reference-dist>
        <max-dist>5000.0</max-dist>
    </engine>

    <extpowerunit>
      <name>ExtPower_inside</name>
      <mode>looped</mode>
      <path>Aircraft/KC-137R/Sounds/external.wav</path>
      <condition>
      	<property>sim/multiplay/generic/int[14]</property>
      </condition>
      <volume>
        <property>sim/multiplay/generic/int[14]</property>
        <factor>1.00</factor>
        <offset>0.00</offset>
        <min>0.05</min>
        <max>0.15</max>
      </volume>
        <position>
            <x>0</x>
            <y>-9.8</y>
            <z>-3</z>
        </position>
        <reference-dist>400.0</reference-dist>
        <max-dist>2000.0</max-dist>
    </extpowerunit> 

  <crashed>
    <name>AirplaneCrashed</name>
    <mode>looped</mode>
    <path>Aircraft/KC-137R/Sounds/crash_ground.wav</path>
     <condition>			
     	<and>
				<property>sim/multiplay/generic/int[19]</property>
        <property>sim/multiplay/generic/float[2]</property>
		   </and>
     </condition>
      <volume>
        <property>sim/multiplay/generic/float[2]</property>
        <factor>1.00</factor>
        <offset>0.00</offset>
        <min>0.05</min>
        <max>0.15</max>
      </volume>
        <position>
            <x>0</x>
            <y>-9.8</y>
            <z>-3</z>
        </position>
        <reference-dist>400.0</reference-dist>
        <max-dist>4000.0</max-dist>
    </crashed>

</fx>

</PropertyList>
