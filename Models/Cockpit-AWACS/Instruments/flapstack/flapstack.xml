<PropertyList>

<path>flapstack.ac</path>

	<animation>
		<type>material</type>
		<object-name>Flap.needle</object-name>
		<object-name>Flap.face</object-name>
		<object-name>Flap.needle.001</object-name>
		<object-name>Flap.face.001</object-name>
		<object-name>Slats.needle</object-name>
		<object-name>Slats.needle.001</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>Flap.needle</object-name>
		<object-name>Flap.face</object-name>
		<object-name>Flap.needle.001</object-name>
		<object-name>Flap.face.001</object-name>
		<object-name>Slats.needle</object-name>
		<object-name>Slats.needle.001</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
			<red>0.8</red>
			<green>0.8</green>
			<blue>0.8</blue>
			<factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>stack</object-name>
		<object-name>Gear.lever</object-name>
		<object-name>Flap.bezel</object-name>
		<object-name>Flap.bezel.001</object-name>
		<condition>
			<not><property>/systems/electrical/outputs/cabin-dim</property></not>
		</condition>
		<emission>
			<red>0.05</red>
			<green>0.05</green>
			<blue>0.05</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>stack</object-name>
		<object-name>Gear.lever</object-name>
		<object-name>Flap.bezel</object-name>
		<object-name>Flap.bezel.001</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>LampBlue</object-name>
		<object-name>switch</object-name>
		<object-name>sockle</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.15</red>
			<green>0.15</green>
			<blue>0.15</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>LampBlue</object-name>
		<object-name>switch</object-name>
		<object-name>sockle</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
			<red>0.25</red>
			<green>0.25</green>
			<blue>0.25</blue>
			<factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>	
	
	<animation>
		<type>material</type>
		<object-name>LampBlueON</object-name>
		<emission>
		  <red>   0.5 </red>
		  <green> 1.0 </green>
		  <blue>  1.0 </blue>
		</emission>
	</animation>

	<animation>
		<type>select</type>
		<object-name>LampBlueON</object-name>  <!-- but its a green lamp now :-)) -->
		<condition>		
			<greater-than>
				<property>/b707/ess-bus</property>
				<value>20</value>
			</greater-than>
		  <or>
		    <and>
		    	<property>/controls/special/slats-switch</property>
				<greater-than>
		    		<property>surface-positions/wing-fold-pos-norm</property>
					<value>0.9</value>
				</greater-than>
		    </and>
		    <property>/controls/test/warn-knob</property>
		  </or>
		</condition>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>switch</object-name>
		<property>/controls/special/slats-switch</property>
		<factor>-60</factor>
		<center>
		  <x-m>0.0063</x-m>
		  <y-m>0.0</y-m>
		  <z-m>0.076</z-m>
		</center>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>switch</object-name>
		<object-name>sockle</object-name>
		<visible>true</visible>
		  <action>
		    <name>on_off_slats</name>
		    <button>0</button>
		    <repeatable>true</repeatable>
				<binding>
					 <command>property-toggle</command>
					 <property>/controls/special/slats-switch</property>
				</binding>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch2</property>
        </binding>
		  </action>
	</animation>
	
<!-- the control lamps -->
	<animation>
		<type>material</type>
		<object-name>lamp.door.ON</object-name>
		<emission>
		  <red>   1.0 </red>
		  <green> 0.8 </green>
		  <blue>  0.4 </blue>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>lamp.gear.ON</object-name>
		<emission>
		  <red>   1.0 </red>
		  <green> 0.8 </green>
		  <blue>  0.4 </blue>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>lamp.warning.ON</object-name>
		<emission>
		  <red>   1.0 </red>
		  <green> 0.8 </green>
		  <blue>  0.4 </blue>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>lamps.gears.ON</object-name>
		<emission>
		  <red>   0.1 </red>
		  <green> 0.7 </green>
		  <blue>  0.1 </blue>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>lamp.door.ON</object-name>
		<condition>		
			<greater-than>
				<property>/b707/ess-bus</property>
				<value>20</value>
			</greater-than>
		  <or>
		    <property>sim/multiplay/generic/float[4]</property>
		    <property>sim/multiplay/generic/float[5]</property>
		    <property>sim/multiplay/generic/float[6]</property>
		    <property>sim/multiplay/generic/float[7]</property>
		    <property>sim/multiplay/generic/float[12]</property>
		    <property>/controls/test/warn-knob</property>
		  </or>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>lamp.warning.ON</object-name>
		<condition>	
			<greater-than>
				<property>/b707/ess-bus</property>
				<value>20</value>
			</greater-than>
		  <or>
		    <property>sim/multiplay/generic/float[4]</property>
		    <property>sim/multiplay/generic/float[5]</property>
		    <property>sim/multiplay/generic/float[6]</property>
		    <property>sim/multiplay/generic/float[7]</property>
		    <property>sim/multiplay/generic/float[12]</property>
		    <and>
		    	<less-than>
						<property>gear/gear[0]/position-norm</property>
						<value>1</value>
					</less-than>
		    	<greater-than>
						<property>gear/gear[0]/position-norm</property>
						<value>0</value>
					</greater-than>
				</and>
		    <property>/controls/test/warn-knob</property>
		  </or>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>lamps.gears.ON</object-name>
		<object-name>lamp.gear.ON</object-name>
		<condition>	
			<greater-than>
				<property>/b707/ess-bus</property>
				<value>20</value>
			</greater-than>
		  <or>
				<equals>
						<property>gear/gear[0]/position-norm</property>
						<value>1</value>
				</equals>
		    <property>/controls/test/warn-knob</property>
		  </or>
		</condition>
	</animation>

<!-- gears up and down -->
	<animation>
		<type>rotate</type>
		<object-name>Gear.lever</object-name>
		<property>gear/gear[0]/position-norm</property>
		<interpolation>
			<entry><ind>1</ind><dep>-24.5</dep></entry>
			<entry><ind>0.5</ind><dep>0</dep></entry>
			<entry><ind>0</ind><dep> 26</dep></entry> 
		</interpolation>  
		<center>
			<x-m>-0.110</x-m>
			<y-m>0</y-m>
			<z-m>-0.0</z-m>
		</center>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
	</animation>

  <animation>
    <type>pick</type>
    <object-name>Gear.lever</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/controls/gear/gear-down</property>
      </binding>
    </action>
  </animation>
  
<!-- the flap instruments -->

<animation>
  <type>rotate</type>
  <object-name>Flap.needle</object-name>
  <property>surface-positions/flap-pos-norm</property>
  <interpolation>
    <entry><ind>   0</ind><dep>  0</dep></entry>
    <entry><ind> 0.2</ind><dep> 48</dep></entry>
    <entry><ind> 0.4</ind><dep> 90</dep></entry>
    <entry><ind> 0.6</ind><dep>136</dep></entry>
    <entry><ind>   1</ind><dep>180</dep></entry>
  </interpolation>
	<center>
		<x-m>0.0</x-m>
		<y-m>0.1021</y-m>
		<z-m>-0.0262</z-m>
	</center>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>Flap.needle.001</object-name>
