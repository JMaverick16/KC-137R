  <animation>
    <type>pick</type>
      <object-name>switch</object-name>
      <object-name>sockle</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
        <binding>
          <command>property-assign</command>
          <property>/b707/warning/door-test</property>  
          <value>1.0</value>
        </binding>
      <mod-up>
        <binding>
