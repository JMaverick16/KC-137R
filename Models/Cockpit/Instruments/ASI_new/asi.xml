		<interpolation>
			<entry><ind>0</ind><dep>297.166667</dep></entry>
			<entry><ind>60</ind><dep>287.66667</dep></entry>
			<entry><ind>250</ind><dep>43.66667</dep></entry>
			<entry><ind>350</ind><dep>0</dep></entry>
