<?xml version="1.0"?>

<PropertyList>

<path>ci.ac</path>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
    <object-name>shadow</object-name>
	</effect>
	
	<animation>
		<type>material</type>
        <object-name>face</object-name>
        <object-name>faceInner</object-name>
        <object-name>needle</object-name>
        <object-name>sym</object-name>
        <object-name>triangle</object-name>
        <object-name>hdg01</object-name>
        <object-name>hdg02</object-name>
        <object-name>hdg03</object-name>
        <object-name>courseRing</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>innerMarkerOut</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
        <object-name>face</object-name>
        <object-name>faceInner</object-name>
        <object-name>needle</object-name>
        <object-name>sym</object-name>
        <object-name>triangle</object-name>
        <object-name>hdg01</object-name>
        <object-name>hdg02</object-name>
        <object-name>hdg03</object-name>
        <object-name>courseRing</object-name>
		<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>innerMarkerOut</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>	

  <animation>
    <type>material</type>
    <object-name>innerMarkerOn</object-name>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>innerMarkerOn</object-name>
    <condition>
        <property>/instrumentation/tacan/in-range</property>
        <less-than>
          <property>/instrumentation/tacan/indicated-distance-nm</property>
          <value>3.0</value>
        </less-than>
    </condition>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>face</object-name>
    <object-name>sym</object-name>
    <property>/instrumentation/tacan/display/correction</property>
    <factor>-1</factor>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
      <type>rotate</type>
      <object-name>needle</object-name>
      <property>/instrumentation/tacan/indicated-distance-nm</property>
      <factor>1</factor>
      <min-deg>-20</min-deg>
      <max-deg>20</max-deg>
      <interpolation>
        <entry><ind>30.0 </ind><dep>  0 </dep></entry>
        <entry><ind>10.1 </ind><dep>  0 </dep></entry>
        <entry><ind>10.0 </ind><dep>-20 </dep></entry>
        <entry><ind>3.0  </ind><dep>  0 </dep></entry>
        <entry><ind>2.99</ind><dep> 20 </dep></entry>
        <entry><ind>0.5</ind><dep>  0 </dep></entry>
      </interpolation>
      <axis>
          <x>1.0</x>
          <y>0</y>
          <z>0.0</z>
      </axis>
      <center>
          <x-m>0.0</x-m>
          <y-m>0.0</y-m>
          <z-m> 0.037 </z-m>
      </center>
  </animation>


<!-- Labels activated by hotspots -->

  <animation>
    <type>material</type>
    <object-name>LabelCI</object-name>
    <emission>
        <red>1.0</red>
        <green>1.0</green>
        <blue>0.0</blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>LabelCI</object-name>
    <condition>
        <property>/sim/panel-hotspots</property>
    </condition>
  </animation>

  <text>
    <name>LabelCI</name>
    <type type="string">literal</type>
    <text type="string">Course Indicator for TACAN</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.010</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.2</max-height>
    <max-width>0.10</max-width>
    <font-resolution>
        <width type="int">24</width>
        <height type="int">24</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>  0.03 </x-m> <!-- near to panel -->
      <y-m>  0 </y-m> <!-- right -->
      <z-m>  0.045 </z-m> <!-- up -->
    </offsets>
  </text>

</PropertyList>
