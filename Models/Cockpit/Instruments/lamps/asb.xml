<PropertyList>

<path>asb.ac</path>

<animation>
	<type>material</type>
  <object-name>LampBlue</object-name>
  <object-name>switch</object-name>
  <object-name>sockle</object-name>
	<condition>
		<less-than><property>systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
	</condition>
	<emission>
		<red>0.15</red>
		<green>0.15</green>
		<blue>0.15</blue>
		<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
	</emission>
</animation>

<animation>
	<type>material</type>
  <object-name>LampBlue</object-name>
  <object-name>switch</object-name>
  <object-name>sockle</object-name>
  <object-name>sup</object-name>
  <object-name>shadow</object-name>
	<condition>
		<not><property>sim/rendering/rembrandt/enabled</property></not>
		<property>systems/electrical/outputs/cabin-dim</property>
	</condition>
	<emission>
	  <red>0.25</red>
	  <green>0.25</green>
	  <blue>0.25</blue>
	  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
	</emission>
</animation>	

<animation>
  <type>noshadow</type>
  <object-name>LampBlue</object-name>
  <object-name>LampBlueON</object-name>
</animation>

<effect>
	<inherits-from>Effects/model-transparent</inherits-from>
	<object-name>shadow</object-name>
</effect>

<animation>
  <type>material</type>
  <object-name>LampBlueON</object-name>
  <emission>
    <red>   0.5 </red>
    <green> 1.0 </green>
    <blue>  1.0 </blue>
  </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>LampBlueON</object-name>
  <condition>
		<greater-than>
			<property>b707/ess-bus</property>
			<value>20</value>
		</greater-than>
    <or>
    	<and>
      	<property>controls/flight/speedbrake-arm</property>
      </and>
      <property>controls/test/warn-knob</property>
    </or>
  </condition>
</animation>

	<animation>
		<type>rotate</type>
		<object-name>switch</object-name>
		<property>controls/flight/speedbrake-arm</property>
		<factor>-60</factor>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>switch</object-name>
		<object-name>sockle</object-name>
		<action>
			<button>0</button>
			<button>1</button>
			<button>2</button>
			<button>3</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-toggle</command>
				<property>controls/flight/speedbrake-arm</property>
			</binding>
			<binding>
			  <command>property-toggle</command>
			  <property>sim/sound/switch2</property>
			</binding>
		</action>
	</animation>

</PropertyList>
