<!--  Active Freq Knobs -->

<animation>
  <type>rotate</type>
  <object-name>ActKnob1</object-name>
  <property>/instrumentation/adf[0]/frequencies/selected-khz</property>
  <interpolation>
    <entry><ind>190</ind><dep>  0</dep></entry>
    <entry><ind>535</ind><dep>720</dep></entry>
  </interpolation>
  <center>
    <x-m>0</x-m>
    <y-m>-0.02338</y-m>
    <z-m>-0.00859</z-m>
  </center>
  <axis>
    <x>1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>
<animation>
  <type>pick</type>
  <object-name>ActKnob1</object-name>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-adjust</command>
      <property>/instrumentation/adf[0]/frequencies/selected-khz</property>
      <step>200</step>
      <min>190</min>
      <max>535</max>
      <wrap>true</wrap>
    </binding>				
    <binding>
			<command>property-toggle</command>
			<property>/sim/sound/switch3</property>
		</binding>
  </action>
  <action>
