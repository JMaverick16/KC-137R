<PropertyList>

<path>firewarning.ac</path>

	<animation>
		<type>material</type>
		<object-name>button.001</object-name>
		<object-name>button.002</object-name>
		<object-name>button.003</object-name>
		<object-name>button.004</object-name>
		<condition>		
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
		</condition>
		<emission>
		  <red>0.2</red>
		  <green>0.2</green>
		  <blue>0.2</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

<!-- the four lamps in the center are beeing indicator for engines off or fire -->
<animation>
  <type>material</type>
  <object-name>lampone</object-name>
  <object-name>lamptwo</object-name>
  <object-name>lampthree</object-name>
  <object-name>lampfour</object-name> 
  <emission>
    <red>0.8</red>
    <green>0.2</green>
    <blue>0.0</blue>
  </emission>
</animation>

<animation>
  <type>select</type>
  <object-name>lampone</object-name>
  <condition>
		<greater-than>
			<property>/b707/ess-bus</property>
			<value>20</value>
		</greater-than>
    <or>
		  <property>/controls/test/warn-knob</property>
		  <property>/controls/engines/engine[0]/fire</property>
		</or>
  </condition>
</animation>

<animation>
  <type>select</type>
  <object-name>lamptwo</object-name>
  <condition>
		<greater-than>
			<property>/b707/ess-bus</property>
			<value>20</value>
		</greater-than>
    <or>
		  <property>/controls/test/warn-knob</property>
		  <property>/controls/engines/engine[1]/fire</property>
		</or>
  </condition>
</animation>

<animation>
  <type>select</type>
