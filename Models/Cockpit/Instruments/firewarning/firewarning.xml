		<greater-than>
			<property>/b707/ess-bus</property>
			<value>20</value>
		</greater-than>
    <or>
		  <property>/controls/test/warn-knob</property>
		  <property>/controls/engines/engine[3]/fire</property>
		</or>
  </condition>
</animation>

    <!-- The warn button 1 -->
		<animation>
	    <type>translate</type>
	    <object-name>button.001</object-name>
  		<object-name>lampone</object-name>
	    <property>/b707/warning/fire-button[0]</property>
	    <factor>0.015</factor>
	    <axis>
	        <x> 1.0</x>
	        <y> 0.0</y>
	        <z> 0.0</z>
	    </axis>
		</animation>

    <animation>
      <type>pick</type>
      <object-name>button.001</object-name>
      <object-name>lampone</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
        <binding>
          <command>property-toggle</command>
          <property>/b707/warning/fire-button[0]</property>  
        </binding>
      </action>
    </animation>

