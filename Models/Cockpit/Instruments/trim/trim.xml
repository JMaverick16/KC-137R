<PropertyList>

<path>trim.ac</path>

<!-- Disable extra indicator, used in stand-alone control position version to indicate El trim -->
<animation>
  <type>select</type>
  <object-name>Trim.NeedleEl2</object-name>
  <condition>
    <equals>
      <value>0</value>
      <value>1</value>
    </equals>
  </condition>
</animation>

	<animation>
		<type>material</type>
			<object-name>Trim.Face</object-name>
			<object-name>Trim.NeedleEl</object-name>
			<object-name>Trim.NeedleRud</object-name>
			<object-name>Trim.NeedleAil</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
			<object-name>Trim.Face</object-name>
			<object-name>Trim.NeedleEl</object-name>
			<object-name>Trim.NeedleRud</object-name>
			<object-name>Trim.NeedleAil</object-name>
			<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
		<object-name>switchshadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
		<object-name>switchshadow</object-name>
  </effect>

<animation>
  <type>translate</type>
  <object-name>Trim.NeedleEl</object-name>
  <property>/controls/flight/elevator-trim</property>
  <factor>0.0085</factor>
  <axis>
    <x>0</x>
    <y>0</y>
    <z>1</z>
  </axis>
</animation>

<animation>
  <type>translate</type>
  <object-name>Trim.NeedleRud</object-name>
  <property>/controls/flight/rudder-trim</property>
  <factor>0.0085</factor>
  <axis>
    <x>0</x>
    <y>1</y>
    <z>0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>Trim.NeedleAil</object-name>
  <property>/controls/flight/aileron-trim</property>
  <interpolation>
    <entry><ind>-1</ind><dep>-30</dep></entry>
    <entry><ind> 0</ind><dep>  0</dep></entry>
    <entry><ind> 1</ind><dep> 30</dep></entry>
  </interpolation>
  <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
  </axis>
</animation>

<!-- all trim wheels to zero -->
<animation>
	<type>pick</type>
	<object-name>Trim.Face</object-name>
	<action>
	  <button>0</button>
	  <repeatable>true</repeatable>
	  <interval-sec>0.2</interval-sec>
	   <binding>
	    <command>nasal</command>
	    <script>b707.applyTrimWheels(0, 0);b707.applyTrimWheels(0, 1);b707.applyTrimWheels(0, 2)</script>
	   </binding>
	</action>
</animation>

</PropertyList>
