    <!-- Click on the vitre showing the flighttime on the screen -->    
    <animation>
      <type>pick</type>
      <object-name>DME.Face</object-name>
      <visible>true</visible>
      <action>
        <button>0</button>
        <repeatable>false</repeatable>
			  <binding>
				  <command>nasal</command>
				  <script>b707.show_dme2();</script>
			  </binding>
      </action>
    </animation>

