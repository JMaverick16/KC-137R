<PropertyList>
 <path>dme.ac</path>
 
	<animation>
		<type>material</type>
      <object-name>Dme.1</object-name>
      <object-name>Dme.10</object-name>
      <object-name>Dme.100</object-name>
      <object-name>Dme.1000</object-name>
      <object-name>Dme.1.1</object-name>
      <object-name>Dme.10.1</object-name>
      <object-name>Dme.100.1</object-name>
      <object-name>Dme.1000.1</object-name>      
      <object-name>Dme.1.2</object-name>
      <object-name>Dme.10.2</object-name>
      <object-name>Dme.100.2</object-name>
      <object-name>Dme.1000.2</object-name>
      <object-name>Dme.1.3</object-name>
      <object-name>Dme.10.3</object-name>
      <object-name>Dme.100.3</object-name>
      <object-name>Dme.1000.3</object-name>
      <object-name>Dot</object-name>
      <object-name>Tacan.1</object-name>
      <object-name>Tacan.10</object-name>
      <object-name>Tacan.100</object-name>
      <object-name>Tacan.1000</object-name>
      <object-name>NoDME</object-name>
      <object-name>DME.Face</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
      <object-name>Dme.1</object-name>
      <object-name>Dme.10</object-name>
      <object-name>Dme.100</object-name>
      <object-name>Dme.1000</object-name>
      <object-name>Dme.1.1</object-name>
      <object-name>Dme.10.1</object-name>
      <object-name>Dme.100.1</object-name>
      <object-name>Dme.1000.1</object-name>
      <object-name>Dme.1.2</object-name>
      <object-name>Dme.10.2</object-name>
      <object-name>Dme.100.2</object-name>
      <object-name>Dme.1000.2</object-name>
      <object-name>Dme.1.3</object-name>
      <object-name>Dme.10.3</object-name>
      <object-name>Dme.100.3</object-name>
      <object-name>Dme.1000.3</object-name>
      <object-name>Dot</object-name>
      <object-name>Tacan.1</object-name>
      <object-name>Tacan.10</object-name>
      <object-name>Tacan.100</object-name>
      <object-name>Tacan.1000</object-name>
      <object-name>NoDME</object-name>
      <object-name>DME.Face</object-name>
			<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>switch</object-name>
		<object-name>sockle</object-name>
		<object-name>switchsup</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.6</value></less-than>
		</condition>
		<emission>
			<red>0.15</red>
			<green>0.15</green>
			<blue>0.15</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
			<object-name>switch</object-name>
			<object-name>sockle</object-name>
			<object-name>switchsup</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
		<object-name>switchshadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
		<object-name>switchshadow</object-name>
  </effect>

	<animation>
		<type>rotate</type>
		<object-name>switch</object-name>
		<property>/controls/switches/dme</property>
		<interpolation>
			<entry><ind> 0</ind><dep> -70.0</dep></entry>
		  <entry><ind> 1</ind><dep>  0.0		 </dep></entry>
		</interpolation>
		<center>
		  <x-m> 0.0003</x-m>
		  <y-m> 0.0</y-m>
		  <z-m>-0.007623</z-m>
		</center>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>switch.001</object-name>
		<property>/controls/switches/dme-gps-slave</property>
		<interpolation>
			<entry><ind> 0</ind><dep> -70.0</dep></entry>
		  <entry><ind> 1</ind><dep>  0.0		 </dep></entry>
		</interpolation>
		<center>
		  <x-m> 0.0003</x-m>
		  <y-m> 0.0</y-m>
		  <z-m>-0.007623</z-m>
		</center>
		<axis>
		  <x>0</x>
		  <y>1</y>
		  <z>0</z>
		</axis>
	</animation>	
	
	<animation>
		<type>pick</type>
		<object-name>switch</object-name>
		<object-name>sockle</object-name>
		<object-name>switchsup</object-name>
		<visible>true</visible>
		  <action>
		    <name>on_off</name>
		    <button>0</button>
		    <repeatable>true</repeatable>
				<binding>
					 <command>property-toggle</command>
					 <property>/controls/switches/dme</property>
				</binding>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch2</property>
        </binding>
		  </action>
	</animation>
	
	
	<animation>
		<type>pick</type>
		<object-name>switch.001</object-name>
		<object-name>sockle.001</object-name>
		<object-name>switchsup.001</object-name>
		<visible>true</visible>
		  <action>
		    <name>on_off_gps_slave</name>
		    <button>0</button>
		    <repeatable>true</repeatable>
				<binding>
					 <command>property-toggle</command>
					 <property>/controls/switches/dme-gps-slave</property>
				</binding>
        <binding>
          <command>property-toggle</command>
          <property>/sim/sound/switch2</property>
        </binding>
		  </action>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Dme.1</object-name>
		<object-name>Dme.10</object-name>
		<object-name>Dme.100</object-name>
		<object-name>Dme.1000</object-name>
		<condition>
		  <equals>
		    <property>/controls/switches/dme</property>
		    <value>0</value>
		  </equals>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Dme.1.1</object-name>
		<object-name>Dme.10.1</object-name>
		<object-name>Dme.100.1</object-name>
		<object-name>Dme.1000.1</object-name>
		<condition>
		  <equals>
		    <property>/controls/switches/dme</property>
		    <value>1</value>
		  </equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Dme.1.2</object-name>
		<object-name>Dme.10.2</object-name>
		<object-name>Dme.100.2</object-name>
		<object-name>Dme.1000.2</object-name>
		<condition>
		    <property>/controls/switches/dme-gps-slave</property>
		    <not><property>/controls/switches/dme</property></not>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Dme.1.3</object-name>
		<object-name>Dme.10.3</object-name>
		<object-name>Dme.100.3</object-name>
		<object-name>Dme.1000.3</object-name>
		<condition>
		    <property>/controls/switches/dme-gps-slave</property>
		    <property>/controls/switches/dme</property>
		</condition>
	</animation>

	<animation>
		<type>select</type>
		<object-name>Tacan.1</object-name>
		<object-name>Tacan.10</object-name>
		<object-name>Tacan.100</object-name>
		<object-name>Tacan.1000</object-name>
		<condition>
		  <equals>
		    <property>/controls/switches/dme</property>
		    <value>2</value>
		  </equals>
		</condition>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>NoDME</object-name>
		<condition>
			<or>
				<and>
				  <property>/controls/switches/dme-gps-slave</property>
				  <not><property>/autopilot/route-manager/active</property></not>
				</and>			
				<and>
					<not><property>/controls/switches/dme</property></not>
					<not><property>/instrumentation/dme[0]/in-range</property></not>
				</and>
				<and>
					<property>/controls/switches/dme</property>
					<not><property>/instrumentation/dme[1]/in-range</property></not>
				</and>	
			</or>
		</condition>
	</animation>
	
    <animation>
        <type>textranslate</type>
        <object-name>Dme.1000</object-name>
        <property>/instrumentation/dme/indicated-distance-nm</property>
		    <factor>0.001</factor>
		    <step>100</step>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

