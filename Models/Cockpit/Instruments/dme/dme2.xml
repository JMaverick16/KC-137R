        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Tacan.1000</object-name>
        <property>/instrumentation/tacan/indicated-distance-nm</property>
        <factor>0.001</factor>
        <step>100</step>
		    <bias>0.005</bias>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>Tacan.100</object-name>
        <property>/instrumentation/tacan/indicated-distance-nm</property>
