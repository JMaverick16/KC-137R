<PropertyList>

  <path>hsi.ac</path>
  
  	<animation>
		<type>material</type>
			<object-name>off-flag</object-name>
			<object-name>sphere</object-name>
			<object-name>hdg-arrow</object-name>
			<object-name>arrow</object-name>
			<object-name>hsi-ring</object-name>
			<object-name>needle</object-name>       
			<object-name>CrsNum.1</object-name>
		  <object-name>CrsNum.2</object-name>
		  <object-name>CrsNum.3</object-name>
		  <object-name>CrsNum.off</object-name>
		  <object-name>From</object-name>
		  <object-name>To</object-name>
		  <object-name>noNav</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
			<object-name>off-flag</object-name>
			<object-name>sphere</object-name>
			<object-name>hdg-arrow</object-name>
			<object-name>arrow</object-name>
			<object-name>hsi-ring</object-name>
			<object-name>needle</object-name>       
			<object-name>CrsNum.1</object-name>
		  <object-name>CrsNum.2</object-name>
		  <object-name>CrsNum.3</object-name>
		  <object-name>CrsNum.off</object-name>
		  <object-name>From</object-name>
		  <object-name>To</object-name>
		  <object-name>noNav</object-name>
			<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>

	<animation>
		<type>material</type>
		<object-name>mount</object-name>
		<object-name>hdg-knob</object-name>
		<object-name>course-knob</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>mount</object-name>
		<object-name>hdg-knob</object-name>
		<object-name>course-knob</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>
 
	<animation>
		<type>noshadow</type>
		<object-name>hsi-ring-close</object-name>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>hsi-ring-close</object-name>
		<object-name>shadow</object-name>
  </effect>

	<animation>
		<type>select</type>
		<object-name>off-flag</object-name>
		<object-name>CrsNum.off</object-name>
		<condition>
			<less-than>
				<property>b707/ess-bus</property>
				<value>12</value>
			</less-than>
		</condition>
	</animation>
	
<!-- compass with hdg function -->
	<animation>
		<type>rotate</type>
		<object-name>hsi-ring</object-name>
		<object-name>hdg-arrow</object-name>
		<object-name>sphere</object-name>
		<object-name>CrsNum.off</object-name>
		<object-name>CrsNum.1</object-name>
		<object-name>CrsNum.2</object-name>
		<object-name>CrsNum.3</object-name>
		<object-name>To</object-name>
		<object-name>From</object-name>
		<object-name>noNav</object-name>
		<object-name>needle</object-name>
		<property>b707/hsi[1]/indicated-heading-deg</property>
		<!--><property>instrumentation/heading-indicator/indicated-heading-deg</property>-->
		<factor>-1</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>hdg-arrow</object-name>
		<property>autopilot/settings/heading-bug-deg</property>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>hdg-knob</object-name>
		<property>autopilot/settings/heading-bug-deg</property>        
		<center>
      <x-m>0.0</x-m>
      <y-m>0.0389</y-m>
      <z-m>-0.0396</z-m>
    </center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	 
  <animation>
		<type>rotate</type>
		<object-name>sphere</object-name>
		<object-name>CrsNum.off</object-name>
		<object-name>CrsNum.1</object-name>
		<object-name>CrsNum.2</object-name>
		<object-name>CrsNum.3</object-name>
		<object-name>To</object-name>
		<object-name>From</object-name>
		<object-name>noNav</object-name>
		<object-name>needle</object-name>
		<property>/instrumentation/nav[1]/radials/selected-deg</property>
		<axis>
			<x>-1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
  </animation>


  <animation>
    <type>pick</type>
    <object-name>hdg-knob</object-name>
    <object-name>hsi-ring</object-name>
    <object-name>hsi-ring-close</object-name>
    <object-name>sphere</object-name>
    <visible>true</visible>
      <action>
          <name>hdg dec</name>
          <button>0</button>
          <repeatable>true</repeatable>
          <binding>
              <condition>
              	<not><property>devices/status/keyboard/shift</property></not>
              	<not><property>devices/status/keyboard/super</property></not>
              </condition>
              <command>property-adjust</command>
              <property>/autopilot/settings/heading-bug-deg</property>
              <step>1</step>
              <min>0</min>
              <max>360</max>
              <wrap>true</wrap>
          </binding>
          <binding>
              <condition>
  		     <or>
  		      <property>devices/status/keyboard/shift</property>
  		      <property>devices/status/keyboard/super</property>
  		     </or>
              </condition>
              <command>property-adjust</command>
              <property>/autopilot/settings/heading-bug-deg</property>
              <step>10</step>
              <min>0</min>
              <max>360</max>
              <wrap>true</wrap>
          </binding>
      </action>
      <action>
          <name>hdg inc</name>
          <button>1</button>
          <repeatable>true</repeatable>
          <binding>
              <condition>
              	<not><property>devices/status/keyboard/shift</property></not>
              	<not><property>devices/status/keyboard/super</property></not>
              </condition>
              <command>property-adjust</command>
              <property>/autopilot/settings/heading-bug-deg</property>
              <step>-1</step>
              <min>0</min>
              <max>360</max>
              <wrap>true</wrap>
          </binding>
          <binding>
              <condition>
  		     <or>
  		      <property>devices/status/keyboard/shift</property>
  		      <property>devices/status/keyboard/super</property>
  		     </or>
              </condition>
              <command>property-adjust</command>
              <property>/autopilot/settings/heading-bug-deg</property>
              <step>-10</step>
              <min>0</min>
              <max>360</max>
              <wrap>true</wrap>
          </binding>        
      </action>
      <action>
          <name>hdg dec</name>
          <button>3</button>
          <repeatable>true</repeatable>
          <binding>
              <condition>
              	<not><property>devices/status/keyboard/shift</property></not>
              	<not><property>devices/status/keyboard/super</property></not>
              </condition>
              <command>property-adjust</command>
              <property>/autopilot/settings/heading-bug-deg</property>
              <step>1</step>
              <min>0</min>
              <max>360</max>
              <wrap>true</wrap>
          </binding>
          <binding>
              <condition>
  		     <or>
  		      <property>devices/status/keyboard/shift</property>
  		      <property>devices/status/keyboard/super</property>
  		     </or>
              </condition>
              <command>property-adjust</command>
              <property>/autopilot/settings/heading-bug-deg</property>
              <step>10</step>
              <min>0</min>
              <max>360</max>
              <wrap>true</wrap>
          </binding>
      </action>
      <action>
          <name>hdg inc</name>
          <button>4</button>
          <repeatable>true</repeatable>
          <binding>
              <condition>
              	<not><property>devices/status/keyboard/shift</property></not>
              	<not><property>devices/status/keyboard/super</property></not>
              </condition>
              <command>property-adjust</command>
              <property>/autopilot/settings/heading-bug-deg</property>
              <step>-1</step>
              <min>0</min>
              <max>360</max>
              <wrap>true</wrap>
          </binding>
          <binding>
              <condition>
  		     <or>
  		      <property>devices/status/keyboard/shift</property>
  		      <property>devices/status/keyboard/super</property>
  		     </or>
              </condition>
              <command>property-adjust</command>
              <property>/autopilot/settings/heading-bug-deg</property>
              <step>-10</step>
              <min>0</min>
              <max>360</max>
              <wrap>true</wrap>
          </binding>
      </action>
  	</animation>
	

<!-- action for nav -->

    <animation>
        <type>select</type>
        <object-name>noNav</object-name>
        <condition>
            <or>
		          <not>
		              <property>/instrumentation/nav[1]/data-is-valid</property>
		          </not>
		          <and>
				        <not>
				            <property>/instrumentation/nav[1]/from-flag</property>
				        </not>
				        <not>
				            <property>/instrumentation/nav[1]/to-flag</property>
				        </not>
				      </and>	          
		        </or>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>To</object-name>
        <condition>
            <property>/instrumentation/nav[1]/to-flag</property>
        </condition>
    </animation>

    <animation>
        <type>select</type>
        <object-name>From</object-name>
        <condition>
            <property>/instrumentation/nav[1]/from-flag</property>
        </condition>
    </animation>
    
    <animation>
        <type>translate</type>
        <object-name>needle</object-name>
        <property>/instrumentation/nav[1]/heading-needle-deflection</property>
        <interpolation>
        <entry><ind>-10.0</ind><dep>-0.0152</dep></entry>
        <entry><ind>10.0</ind><dep>0.0152</dep></entry>
    </interpolation>
        <axis>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </axis>
        <center>
            <x-m>0.0</x-m>
            <y-m>0.0</y-m>
            <z-m>-0.006</z-m>
        </center>
    </animation>

		<animation>
				<type>textranslate</type>
				<object-name>CrsNum.1</object-name>
				<property>/instrumentation/nav[1]/radials/selected-deg</property>
				<factor>0.001</factor>
				<step>100</step>
				<scroll>1</scroll>
				<axis>
				    <x>0</x>
				    <y>1</y>
				    <z>0</z>
				</axis>
		</animation>

		<animation>
				<type>textranslate</type>
				<object-name>CrsNum.2</object-name>
				<property>/instrumentation/nav[1]/radials/selected-deg</property>
				<factor>0.01</factor>
				<step>10</step>
				<scroll>1</scroll>
				<axis>
				    <x>0</x>
				    <y>1</y>
				    <z>0</z>
				</axis>
		</animation>

		<animation>
				<type>textranslate</type>
				<object-name>CrsNum.3</object-name>
				<property>/instrumentation/nav[1]/radials/selected-deg</property>
				<factor>0.1</factor>
				<step>1</step>
				<scroll>1</scroll>
				<axis>
				    <x>0</x>
				    <y>1</y>
				    <z>0</z>
				</axis>
		</animation>
		
    <animation>
      <type>rotate</type>
      <object-name>course-knob</object-name>
      <property>/instrumentation/nav[1]/radials/selected-deg</property>
        <factor>-10</factor>
      <center>
      <x-m> 0.0</x-m>
      <y-m>-0.0389</y-m>
      <z-m>-0.0397</z-m>
      </center>
      <axis>
        <x> 1 </x>
        <y> 0 </y>
        <z> 0 </z>
      </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>crsPane</object-name>
        <visible>false</visible>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <condition>
            	<not><property>devices/status/keyboard/shift</property></not>
            	<not><property>devices/status/keyboard/super</property></not>
                </condition>
                <command>property-adjust</command>
                <property>/instrumentation/nav[1]/radials/selected-deg</property>
                <step>10</step>
                <min>0</min>
                <max>359</max>
                <wrap>1</wrap>
            </binding>
            <binding>
                <condition>
						     <or>
						      <property>devices/status/keyboard/shift</property>
						      <property>devices/status/keyboard/super</property>
						     </or>
                </condition>
                <command>property-adjust</command>
                <property>/instrumentation/nav[1]/radials/selected-deg</property>
                <step>20</step>
                <min>0</min>
                <max>359</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <interval-sec>0.2</interval-sec>
            <binding>
                <condition>
            	<not><property>devices/status/keyboard/shift</property></not>
            	<not><property>devices/status/keyboard/super</property></not>
                </condition>
                <command>property-adjust</command>
                <property>/instrumentation/nav[1]/radials/selected-deg</property>
                <step>-10</step>
                <min>0</min>
                <max>359</max>
                <wrap>1</wrap>
            </binding>
            <binding>
                <condition>
						     <or>
						      <property>devices/status/keyboard/shift</property>
						      <property>devices/status/keyboard/super</property>
						     </or>
                </condition>
                <command>property-adjust</command>
                <property>/instrumentation/nav[1]/radials/selected-deg</property>
                <step>-20</step>
                <min>0</min>
                <max>359</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <button>3</button>
            <binding>
                <condition>
            	<not><property>devices/status/keyboard/shift</property></not>
            	<not><property>devices/status/keyboard/super</property></not>
                </condition>
                <command>property-adjust</command>
                <property>/instrumentation/nav[1]/radials/selected-deg</property>
                <step>1</step>
                <min>0</min>
                <max>359</max>
                <wrap>1</wrap>
            </binding>
            <binding>
                <condition>
						     <or>
						      <property>devices/status/keyboard/shift</property>
						      <property>devices/status/keyboard/super</property>
						     </or>
                </condition>
                <command>property-adjust</command>
                <property>/instrumentation/nav[1]/radials/selected-deg</property>
                <step>5</step>
                <min>0</min>
                <max>359</max>
                <wrap>1</wrap>
            </binding>
        </action>
        <action>
            <button>4</button>
            <binding>
                <condition>
            	<not><property>devices/status/keyboard/shift</property></not>
            	<not><property>devices/status/keyboard/super</property></not>
                </condition>
                <command>property-adjust</command>
                <property>/instrumentation/nav[1]/radials/selected-deg</property>
                <step>-1</step>
                <min>0</min>
                <max>359</max>
                <wrap>1</wrap>
            </binding>
            <binding>
                <condition>
						     <or>
						      <property>devices/status/keyboard/shift</property>
						      <property>devices/status/keyboard/super</property>
						     </or>
                </condition>
                <command>property-adjust</command>
                <property>/instrumentation/nav[1]/radials/selected-deg</property>
                <step>-5</step>
                <min>0</min>
                <max>359</max>
                <wrap>1</wrap>
            </binding>
        </action>
    </animation>

 

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-m>15</max-m>
  </animation>

</PropertyList>
