<PropertyList>

 <path>alt.ac</path>

	<animation>
		<type>material</type>
    <object-name>ALTface</object-name>
    <object-name>needle</object-name>
    <object-name>altnum10000</object-name>
    <object-name>altnum1000</object-name>
    <object-name>altnum100</object-name>
    <object-name>inhg01</object-name>
    <object-name>inhg02</object-name>
    <object-name>inhg03</object-name>
    <object-name>inhg04</object-name>
    <object-name>mb01</object-name>
    <object-name>mb02</object-name>
    <object-name>mb03</object-name>
    <object-name>mb04</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>BaroKnob</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.2</red>
			<green>0.2</green>
			<blue>0.2</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
    <object-name>ALTface</object-name>
    <object-name>needle</object-name>
    <object-name>altnum10000</object-name>
    <object-name>altnum1000</object-name>
    <object-name>altnum100</object-name>
    <object-name>inhg01</object-name>
    <object-name>inhg02</object-name>
    <object-name>inhg03</object-name>
    <object-name>inhg04</object-name>
    <object-name>mb01</object-name>
    <object-name>mb02</object-name>
    <object-name>mb03</object-name>
    <object-name>mb04</object-name>
		<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>BaroKnob</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.3</red>
		  <green>0.3</green>
		  <blue>0.3</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
  </effect>

<!--####    InHg    ####-->

    <animation>
        <type>textranslate</type>
        <object-name>inhg01</object-name>
        <property>/instrumentation/altimeter/setting-inhg</property>
        <factor>0.01</factor>
        <step>10</step>
		<bias>0.005</bias>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>inhg02</object-name>
        <property>/instrumentation/altimeter/setting-inhg</property>
        <factor>0.1</factor>
        <step>1</step>
		<bias>0.005</bias>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>textranslate</type>
        <object-name>inhg03</object-name>
        <property>/instrumentation/altimeter/setting-inhg</property>
        <factor>1.0</factor>
        <step>0.1</step>
		<bias>0.005</bias>
        <axis>
            <x>0</x>
