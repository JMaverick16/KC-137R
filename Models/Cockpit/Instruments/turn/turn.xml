<PropertyList>

  <path>turn.ac</path>
  
  	<animation>
		<type>material</type>
		<object-name>TB.Ball</object-name>
		<object-name>TB.Face</object-name>
		<object-name>TB.Ref</object-name>
		<object-name>TB.Needle</object-name>
		<condition>
			<less-than><property>/systems/electrical/outputs/cabin-dim</property><value>0.8</value></less-than>
		</condition>
		<emission>
			<red>0.6</red>
			<green>0.4</green>
			<blue>0.3</blue>
			<factor-prop>/systems/electrical/outputs/panel-dim</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>TB.Ball</object-name>
		<object-name>TB.Face</object-name>
		<object-name>TB.Ref</object-name>
		<object-name>TB.Needle</object-name>
		<object-name>shadow</object-name>
		<condition>
			<not><property>/sim/rendering/rembrandt/enabled</property></not>
			<property>/systems/electrical/outputs/cabin-dim</property>
		</condition>
		<emission>
		  <red>0.8</red>
		  <green>0.8</green>
		  <blue>0.8</blue>
		  <factor-prop>/systems/electrical/outputs/cabin-dim</factor-prop>
		</emission>
	</animation>	

	<animation>
		<type>noshadow</type>
		<object-name>shadow</object-name>
	</animation>

	<effect>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>shadow</object-name>
  </effect>

	<animation>
		<type>rotate</type>
		<object-name>TB.Needle</object-name>
		<property>/instrumentation/turn-indicator/indicated-turn-rate</property>
		<interpolation>
		  <entry><ind>  -5</ind><dep>-30</dep></entry>
		  <entry><ind>-1.5</ind><dep>-30</dep></entry>
		  <entry><ind> 1.5</ind><dep> 30</dep></entry>
		  <entry><ind>   5</ind><dep> 30</dep></entry>
		</interpolation>
		<axis>
		  <x>-1</x>
		  <y>0</y>
		  <z>0</z>
		</axis>
		<center>
		  <x-m>0</x-m>
		  <y-m>0</y-m>
		  <z-m>-0.0255</z-m>
		</center>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>TB.Ball</object-name>
		<property>/instrumentation/slip-skid-ball/indicated-slip-skid</property>
		<min>-2.5</min>
		<max> 2.5</max>
		<interpolation>
		  <entry><ind>-2.5</ind><dep>-4.5</dep></entry>
		  <entry><ind> 2.5</ind><dep> 4.5</dep></entry>
		</interpolation>
		<axis>
		  <x>-1</x>
		  <y>0</y>
		  <z>0</z>
		</axis>
		<center>
		  <x-m>0</x-m>
		  <y-m>0</y-m>
		  <z-m>0.3</z-m>
		</center>
	</animation>

</PropertyList>
