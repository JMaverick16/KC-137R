<PropertyList>
 <path>PWJT4.ac</path>
  
	<animation>
		<type>spin</type>
		<object-name>engineCone</object-name>
		<object-name>engineDisk</object-name>
		<object-name>engineDiskFast</object-name>
		<property>engines/engine[1]/n1</property>
		<factor>20</factor>   
		<center>
		 <x-m>0.0</x-m>
		 <y-m>0.0</y-m>
		 <z-m>0.0</z-m>
		</center>
		<axis>
		 <x>1</x>
		 <y>0</y>
		 <z>0</z>
		</axis>
	</animation>
		
  <animation>
      <type>translate</type>
      <object-name>engineCowlCenter</object-name>
      <property>sim/multiplay/generic/float[14]</property>
      <factor>0.2</factor>
      <axis>
          <x> 1.0</x>
          <y> 0.0</y>
          <z> 0.0</z>
      </axis>
  </animation>
  
  <animation>
      <type>translate</type>
      <object-name>engineCowlRear</object-name>
      <property>sim/multiplay/generic/float[14]</property>
      <factor>0.25</factor>
      <axis>
          <x> 1.0</x>
          <y> 0.0</y>
          <z> 0.0</z>
      </axis>
  </animation>

  <animation>
      <type>translate</type>
      <object-name>engineCowlFront</object-name>
			<property>engines/engine[1]/n1</property>
			<interpolation>
				<entry><ind>  30.0</ind><dep>   0.0</dep></entry>
				<entry><ind> 100.0</ind><dep>   1.0</dep></entry>
			</interpolation>
      <axis>
          <x> 1.0</x>
          <y> 0.0</y>
          <z> 0.0</z>
      </axis>
  </animation>  
	
	<animation>
	<type>select</type>
	<object-name>engineDisk</object-name>
		<condition>
			<less-than>
				<property>engines/engine[1]/n1</property>
				<value>25</value>
			</less-than>
		</condition>
	</animation>
	
	<animation>
	<type>select</type>
	<object-name>exhaustHeat</object-name>
		<condition>
			<greater-than>
				<property>engines/engine[1]/n1</property>
				<value>31</value>
			</greater-than>
		</condition>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>exhaustHeat</object-name>
		<emission>
			<red>0.002</red>
			<green>0.002</green>
			<blue>0.000025</blue>
			<factor-prop>engines/engine[1]/n1</factor-prop>
		</emission>
	</animation>

  <!-- smoke -->
	<model>
		<path>Aircraft/KC-137R/Models/Effects/smoke_2.xml</path>
		<offsets>
			<x-m> 2.1</x-m>
			<y-m> 0.0</y-m>
			<z-m> 0.0</z-m>
		</offsets>
	</model>
	
</PropertyList>
